{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    // File Layout
    "rootDirs": [".", "./.react-router/types"],

    // Code
    "jsx": "react-jsx",
    "types": ["vite/client"],

    // Bundler
    "module": "Preserve",
    "target": "ES2024",
    "verbatimModuleSyntax": true,

    // Type Checking
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,

    // DX
    "paths": {
      "~/*": ["./app/*"],
      "~/email/*": ["./emails/*"]
    }
  }
}
